<div class="container">
    <h1 class="mt-2">Events</h1>
    <% events.forEach(event => { %>
        <div class="card flex-md-row mb-4 box-shadow h-md-250">
            <div class="card-body d-flex flex-column align-items-start">
                <h3 class="mb-0">
                    <a href="/events/<%= event.public_id %>" class="text-dark"><h2><%= event.name %></h2></a>
                </h3>
                <div class="mb-1 text-muted"><%= event.first_date.toLocaleString('en-EN', {
                    weekday: 'long',
                    day: 'numeric', 
                    year: 'numeric', 
                    month: 'long'}) %></div>
                <p class="card-text mb-auto">The event is repeated: <%= event.repeat %></p>
                <p class="card-text mb-auto"><%= event.description %></p>
                <a href="/events/<%= event.public_id %>">Go to event</a>
            </div>
        </div>
    <% }) %>
</div>

