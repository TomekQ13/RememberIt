<div class="container">
    <h2>
        Events occurences in the next 7 days
    </h2>
    <% events7Days.forEach(element => { %>
        <div class="card flex-md-row mb-4 box-shadow h-md-250">
            <div class="card-body d-flex flex-column align-items-start">
                <h3 class="mb-0">
                    <a href="/events/<%= element.public_id %>" class="text-dark"><h2><%= element.name %></h2></a>
                </h3>
                <div class="mb-1 text-muted"><%= element.event_date.toLocaleString('en-EN', {
                    weekday: 'long',
                    day: 'numeric', 
                    year: 'numeric', 
                    month: 'long'}) %></div>
                <p class="card-text mb-auto">The event is repeated: <%= element.repeat %></p>
                <p class="card-text mb-auto"><%= element.description %></p>
                <a href="/events/<%= element.public_id %>">Go to event</a>
            </div>
        </div>
    <% }) %>
</div>